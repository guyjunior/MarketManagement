@model sonmarket.Models.Estoque;
@{
    Layout = "_LayoutAdmin";
}

<h3>Novo Estoque</h3>
<form class="form-horizontal" method="POST" asp-controller="Estoque" asp-action="Salvar">
    
    <label asp-for="Produto">Produto</label>
    <select class="form-control" asp-for="ProdutoId" asp-items='@(new SelectList(@ViewBag.Produtos,"Id","Nome"))'></select>
    <br>
    
    <input class="form-control" asp-for="Quantidade" placeholder="Quantidade">
    <br>
    <button class="btn btn-success">CRIAR</button>

</form>
